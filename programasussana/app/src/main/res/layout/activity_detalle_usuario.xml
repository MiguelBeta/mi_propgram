<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".controller.concierge.DetalleUsuarioActivity">

    <include
        android:id="@+id/include"
        layout="@layout/custom_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/Size10dp"
                android:background="@drawable/background_circle"
                android:padding="@dimen/Size10dp"
                android:src="@drawable/logo_acreditacion_salud_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Size10dp"
                android:fontFamily="@font/arial_rounded_mt_bold"
                android:text="ZANDRA SORAYDA BENAVIDES PEÑA"
                android:textAlignment="center"
                android:textColor="@color/azul"
                android:textSize="@dimen/Size20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView8" />


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/Size10dp"
                    android:backgroundTint="@color/azul"
                    android:elevation="@dimen/Size8dp"
                    app:cardCornerRadius="@dimen/Size8dp"
                    app:cardElevation="@dimen/Size8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/Size8dp">

                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="@dimen/Size32dp"
                            android:layout_height="@dimen/Size32dp"
                            app:srcCompat="@drawable/phone"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/idTxtPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arial_rounded_mt_bold"
                            android:text="3138470225"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/Size10dp"
                    android:backgroundTint="@color/azul"
                    android:elevation="@dimen/Size8dp"
                    app:cardCornerRadius="@dimen/Size8dp"
                    app:cardElevation="@dimen/Size8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/Size8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/Size32dp"
                                android:layout_height="@dimen/Size32dp"
                                app:srcCompat="@drawable/woman"
                                app:tint="@color/white" />

                            <ImageView
                                android:layout_width="@dimen/Size32dp"
                                android:layout_height="@dimen/Size32dp"
                                app:srcCompat="@drawable/man"
                                app:tint="@color/white" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/idTxtGenger"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arial_rounded_mt_bold"
                            android:text="Femenino"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/Size10dp"
                    android:backgroundTint="@color/azul"
                    android:elevation="@dimen/Size8dp"
                    app:cardCornerRadius="@dimen/Size8dp"
                    app:cardElevation="@dimen/Size8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/Size8dp">

                        <ImageView
                            android:layout_width="@dimen/Size32dp"
                            android:layout_height="@dimen/Size32dp"
                            app:srcCompat="@drawable/card"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/idTxtIdentification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arial_rounded_mt_bold"
                            android:text="69009282"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/Size10dp"
                android:elevation="@dimen/Size8dp"
                app:cardCornerRadius="@dimen/Size8dp"
                app:cardElevation="@dimen/Size8dp"
                app:layout_constraintStart_toStartOf="@+id/linearLayout"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/verde_oscuro"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:padding="@dimen/Size8dp"
                        android:text="Edad"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/Size14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:padding="@dimen/Size8dp"
                        android:text="42 Años / 5 Meses / 4 Días"
                        android:textColor="@color/azul"
                        android:textSize="@dimen/Size14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/Size10dp"
                android:elevation="@dimen/Size8dp"
                app:cardCornerRadius="@dimen/Size8dp"
                app:cardElevation="@dimen/Size8dp"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/verde_oscuro"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:padding="@dimen/Size8dp"
                        android:text="Tipo de cita"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/Size14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:padding="@dimen/Size8dp"
                        android:text="Normal"
                        android:textColor="@color/azul"
                        android:textSize="@dimen/Size14sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginBottom="@dimen/Size32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">

                <LinearLayout
                    android:id="@+id/idLayoutDateQuote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/Size10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/Size20dp"
                    android:paddingTop="@dimen/Size32dp"
                    android:paddingEnd="@dimen/Size20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:text="FechaInicialCita: "
                        android:textColor="@color/azul"
                        android:textSize="@dimen/Size14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:text="13/07/2023 9:30:00 a. m."
                        android:textColor="@color/azul"
                        android:textSize="@dimen/Size20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/Size10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/Size20dp"
                    android:paddingEnd="@dimen/Size20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/idLayoutDateQuote">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:text="Duracion: "
                        android:textColor="@color/azul"
                        android:textSize="@dimen/Size14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:text="01/01/2009 12:30:00 a. m."
                        android:textColor="@color/azul"
                        android:textSize="@dimen/Size20sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/Size10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/Size20dp"
                    android:paddingEnd="@dimen/Size20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:text="Actividad: "
                        android:textColor="@color/azul"
                        android:textSize="@dimen/Size14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:text="CONSULTA EN CPCU CON RESULTADOS"
                        android:textColor="@color/azul"
                        android:textSize="@dimen/Size20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/Size32dp"
        android:backgroundTint="@color/verde_oscuro"
        android:fontFamily="@font/arial_rounded_mt_bold"
        android:text="Si Asistio"
        android:textColor="@color/white"
        android:textSize="@dimen/Size20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/Size32dp"
        android:backgroundTint="@color/azul"
        android:fontFamily="@font/arial_rounded_mt_bold"
        android:text="No Asistio"
        android:textColor="@color/white"
        android:textSize="@dimen/Size20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>