<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.MaterialToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/verde_oscuro"
    android:elevation="@dimen/Size10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/idBtnArrowBack"
            android:layout_width="@dimen/Size32dp"
            android:layout_height="@dimen/Size32dp"
            android:src="@drawable/arrow_back"
            app:tint="@color/white" />

        <TextView
            android:layout_marginStart="@dimen/Size8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial_rounded_mt_bold"
            android:text="Pacientes"
            android:textSize="@dimen/Size20sp"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</com.google.android.material.appbar.MaterialToolbar>