<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.concierge.ConciergeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/Size10dp"
            android:elevation="@dimen/Size8dp"
            app:cardCornerRadius="@dimen/Size10dp"
            app:cardElevation="@dimen/Size8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/rectangulotitulo"
                android:orientation="horizontal"
                android:paddingTop="@dimen/Size20dp"
                android:paddingBottom="@dimen/Size10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher_foreground"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/name_hospital"
                        android:textColor="@color/verde_oscuro"
                        android:textSize="@dimen/Size20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/Size10dp"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:text="SOFTWARE PARA INGRESO Y VALIDACION DE PACIANTES PARA  CITAS DE CONSULTA EXTERNA"
                        android:textAlignment="textStart"
                        android:textColor="@color/verde_oscuro"
                        android:textSize="@dimen/Size14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView" />

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/Size15dp"
            android:layout_marginTop="@dimen/Size10dp"
            android:layout_marginEnd="@dimen/Size15dp"
            android:text="Panel de control"
            android:textAlignment="textStart"
            android:textColor="@color/verde_oscuro"
            android:textSize="@dimen/Size20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/Size15dp"
            android:layout_marginEnd="@dimen/Size15dp"
            android:layout_marginBottom="@dimen/Size20dp"
            android:text="Recuerda que Recuerda que Recuerda que Recuerda que Recuerda queRecuerda que Recuerda que "
            android:textAlignment="textStart"
            android:textColor="@color/verde_oscuro"
            android:textSize="@dimen/Size14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/idBtnReadCredetials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/Size15dp"
            android:elevation="@dimen/Size8dp"
            app:cardCornerRadius="@dimen/Size10dp"
            app:cardElevation="@dimen/Size8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/Size8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/cyborg_card" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/Size10dp"
                    android:fontFamily="@font/arial_rounded_mt_bold"
                    android:text="Leer credenciales"
                    android:textAlignment="textStart"
                    android:textColor="@color/verde_oscuro"
                    android:textSize="@dimen/Size14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/idCardViewInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/Size15dp"
            android:elevation="@dimen/Size8dp"
            app:cardCornerRadius="@dimen/Size10dp"
            app:cardElevation="@dimen/Size8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/Size8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/information_interface" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/Size10dp"
                    android:fontFamily="@font/arial_rounded_mt_bold"
                    android:text="Visualizador de información"
                    android:textAlignment="textStart"
                    android:textColor="@color/verde_oscuro"
                    android:textSize="@dimen/Size14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/Size15dp"
            android:elevation="@dimen/Size8dp"
            app:cardCornerRadius="@dimen/Size10dp"
            app:cardElevation="@dimen/Size8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/Size8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/personal_data" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/Size10dp"
                    android:fontFamily="@font/arial_rounded_mt_bold"
                    android:text="Información de vigilante de turno"
                    android:textAlignment="textStart"
                    android:textColor="@color/verde_oscuro"
                    android:textSize="@dimen/Size14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>